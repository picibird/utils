{
  "name": "@picibird/utils",
  "version": "1.0.0",
  "description": "utils for cloud native stacks",
  "repository": {
    "url": "https://github.com/picibird/utils"
  },
  "license": "ISC",
  "author": "Marcus Specht <me@masp.io> (https://picibird.com)",
  "private": true,
  "workspaces": [
    "./src/cli",
    "./src/client",
    "./src/server",
    "./src/util"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "pretest": "npm run clean",
    "test": "npm run test --workspaces",
    "start": "npm run start --workspaces",
    "release": "release-it",
    "clean": "rimraf src/*/dist src/*/build",
    "reset": "rimraf **/node_modules **/*.lock **/*-lock",
    "check-env": "node -e 'console.log(process.env)' | grep npm"
  },
  "engines": {
    "node": ">=14 <15"
  },
  "devDependencies": {
    "release-it": "^14.7.0",
    "release-it-yarn-workspaces": "^2.0.1"
  }
}
