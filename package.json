{
  "name": "@picibird/utils",
  "version": "1.0.0",
  "description": "utils for cloud native stacks",
  "repository": {
    "url": "https://github.com/picibird/utils"
  },
  "license": "ISC",
  "author": "Marcus Specht <me@masp.io> (https://picibird.com)",
  "private": true,
  "workspaces": [
    "./src/cli",
    "./src/client",
    "./src/server",
    "./src/shared",
    "./src/test"
  ],
  "scripts": {
    "dev": "npm run dev --ws --if-present",
    "build": "npm run build --ws --if-present",
    "start": "npm run start --ws --if-present",
    "test": "npm run test -w=./src/test",
    "pretest": "npm run clean && npm run build",
    "release": "npm run release --ws --if-present",
    "prerelease": "npm run test && npm version patch --ws",
    "postrelease": "npm publish --access=restricted",
    "upgrade": "ncu --deep --target greatest --upgrade",
    "postupgrade": "npm run reset",
    "clean": "rimraf src/*/.dist src/*/.build",
    "reset": "rimraf **/node_modules **/*lock*.json",
    "postreset": "npm install && npm run test",
    "check-env": "node -e 'console.log(process.env)' | grep npm"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  }
}
